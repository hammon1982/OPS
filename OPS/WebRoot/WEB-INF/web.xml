<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <!-- 定义了WEB应用的名字，元素提供GUI工具可能会用来标记这个特定的Web应用的一个名称。 -->
  <display-name>OPS</display-name>
  <!-- 元素声明应用范围内的初始化参数 -->
  <context-param>
  	<!-- 初始化Spring配置文件 -->
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:spring.xml,classpath:spring-ehcache.xml,classpath:spring-hibernate.xml,classpath:spring-tasks.xml</param-value>
  </context-param>
  <!-- 定义过滤器 -->
  <filter>
  	<!-- 定义编码过滤器 -->
    <filter-name>encodingFilter</filter-name>
    <filter-class>ops.mvc.framework.filter.EXTCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <!-- 一旦命名了一个过滤器，就要利用filter-mapping元素把它与一个或多个servlet或JSP页面相关联。 -->
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- 配置监听器类ContextLoaderListener -->	
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <!-- 配置监听器类IntrospectorCleanupListener -->
  <listener>
    <listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
  </listener>
  <!-- 配置Spring Servlet -->
  <servlet>
    <servlet-name>springMvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/spring-mvc.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <!-- 配置SpringServlet映射 -->
  <servlet-mapping>
    <servlet-name>springMvc</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之css -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之js -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之json -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.json</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之gif -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.gif</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之png -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.png</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之jpg -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.jpg</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之ico -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.ico</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之doc -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.doc</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之xls -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.xls</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之docx -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.docx</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之xlsx -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.xlsx</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之txt -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.txt</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之swf -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.swf</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之ocx -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.ocx</url-pattern>
  </servlet-mapping>
  <!-- 配置Servlet默认URL之cab -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.cab</url-pattern>
  </servlet-mapping>
  <!-- 设置会话 -->
  <session-config>
  	<!-- 设置会话超时时间，单位分钟 -->
    <session-timeout>0</session-timeout>
  </session-config>
  <!-- 设置欢迎页 -->
  <welcome-file-list>
    <welcome-file>/index.jsp</welcome-file>
  </welcome-file-list>
  <!-- 设置404跳转页面 -->
  <error-page>
    <error-code>404</error-code>
    <location>/error/404.jsp</location>
  </error-page>
  <!-- 设置500跳转页面 -->
  <error-page>
    <error-code>500</error-code>
    <location>/error/500.jsp</location>
  </error-page>
</web-app>